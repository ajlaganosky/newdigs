<h1>New event</h1>

<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Created Date" %><br />
    <%= f.text_field :published_on %>
  </div>

  <%= f.hidden_field :client_id %>

  <div class="field">
    <%= f.label "Start Time" %><br />
	<%= f.time_select :start_time, {:combined => true, :default => Time.now.change(:hour => 11, :min => 30), :minute_interval => 15, :time_separator => "", :start_hour => 8, :end_hour => 17 } %>
  </div>
  <div class="field">
    <%= f.label "Expires On" %><br />
    <%= f.text_field :expiration_date %>
  </div>
  <div class="field">
    <%= f.label "End Time" %><br />
	<%= f.time_select :end_time, {:combined => true, :default => Time.now.change(:hour => 11, :min => 30), :minute_interval => 15, :time_separator => "", :start_hour => 8, :end_hour => 17 } %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :product %><br />
    <%= f.collection_select(:product_id, Product.all, :id, :name, {:include_blank => 'Please select a Product'}) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to 'Back', events_path %>

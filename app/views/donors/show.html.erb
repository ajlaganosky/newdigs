<p id="notice"><%= notice %></p>

<p class="info"><strong>Name:</strong> <%= @donor.name %></p>
<p class="info"><strong>Address:</strong> <%= @donor.address %></p>
<p class="info"><strong>Phone:</strong> <%= number_to_phone(@donor.phone, :area_code => true, :delimiter => "-") %></p>
<p class="info"><strong>Email:</strong> <%= mail_to @donor.email, "Email", :encode => "hex" %></p>
<p class="info"><strong>Donated Products:</strong></p>
<ul>
	<% if @products %>
		<% @products.collect do |a| %>
		 <li><a href="/products/<%= a.id %>"><%= a.name %></a></li>
		<% end %>
	<% end %>
</ul>
<% if can? :update, @donors %><%= link_to 'Edit', edit_donor_path(@donor), :class => "btn btn-warning" %>
<% end %><%= link_to 'Back', donors_path, :class => "btn btn-inverse"  %>

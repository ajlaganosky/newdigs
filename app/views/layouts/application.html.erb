<!DOCTYPE html>
<html>
<head>
  <title>Inventory</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<link type="text/css" rel="stylesheet" media="all" href="/assets/css/bootstrap.min.css">
	<link type="text/css" rel="stylesheet" media="all" href="/assets/css/bootstrap-responsive.min.css">
	<script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
<section class="container">

<p class="alert">
	<% if user_signed_in? %>
        Signed in as <% if can? :update, @user %><%= link_to current_user.email, edit_user_registration_path %><% else %><%= current_user.email %><% end %>. 
        | <a href="/">Home</a> | <%= link_to 'Inventory', products_path %> | <%= link_to 'Clients', clients_path %> | <%= link_to 'Calendar', events_path %> | <%= link_to 'Donors', donors_path %> | <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
    <% end %><br />
    <span class="alert-error">
     <% if alert %> <% end %>
<%= alert %></span></p>

<%= yield %>

</section>
</body>
</html>